<div class="wrapper vh-100">
  <div class="row align-items-center h-100">
    <div class="col-lg-6 d-none d-lg-flex">
    </div> <!-- ./col -->
    <div class="col-lg-6">
      <div class="w-50 mx-auto">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "mx-auto text-center"}) do |f| %>
          <a class="navbar-brand mx-auto mt-2 flex-fill text-center" href="./index.html">
            <svg version="1.1" id="logo" class="navbar-brand-img brand-md" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 120 120" xml:space="preserve">
              <g>
                <polygon class="st0" points="78,105 15,105 24,87 87,87 	" />
                <polygon class="st0" points="96,69 33,69 42,51 105,51 	" />
                <polygon class="st0" points="78,33 15,33 24,15 87,15 	" />
              </g>
            </svg>
          </a>
          <h1 class="h6 mb-3">Timesheets</h1>
          <div class="form-group">
            <label for="inputEmail" class="sr-only">Email address</label>
            <%= f.text_field :username, class: "form-control form-control-lg", placeholder: "Email address" %>
          </div>
          <div class="form-group">
            <label for="inputPassword" class="sr-only">Password</label>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg", placeholder: "Password" %>
          </div>
          <%= f.submit "Login", class: "btn btn-lg btn-primary btn-block" %>
        <% end %>
      </div> <!-- .card -->
    </div> <!-- ./col -->
  </div> <!-- .row -->
</div>