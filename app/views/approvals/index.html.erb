<p id="notice"><%= notice %></p>

<h1>Approvals</h1>

<table>
  <thead>
    <tr>
      <th>Loan</th>
      <th>Approve by</th>
      <th>Approve level</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @approvals.each do |approval| %>
      <tr>
        <td><%= approval.loan %></td>
        <td><%= approval.approve_by %></td>
        <td><%= approval.approve_level %></td>
        <td><%= approval.date %></td>
        <td><%= link_to 'Show', approval %></td>
        <td><%= link_to 'Edit', edit_approval_path(approval) %></td>
        <td><%= link_to 'Destroy', approval, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Approval', new_approval_path %>
